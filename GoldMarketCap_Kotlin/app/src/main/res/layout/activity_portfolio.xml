<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107">

    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/xxxhdpi"
        android:layout_below="@id/header"
        android:contentDescription="@string/app_name"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tvAddGoldInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:layout_below="@id/imgBanner"
        android:gravity="center_horizontal"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnAddTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:layout_below="@id/tvAddGoldInstruction"
        android:background="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"/>

    <include
        android:id="@+id/footer_navigation"
        layout="@layout/footer_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_navigation"
        android:layout_below="@id/header"
        android:fillViewport="true">
    </ScrollView>

</RelativeLayout>
