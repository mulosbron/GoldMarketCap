<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107">

    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etSearchGold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/todo"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@id/header"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:background="@android:drawable/editbox_background"/>

    <ListView
        android:id="@+id/lvGoldItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSearchGold"
        android:layout_above="@id/footer_navigation"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"/>

    <include
        android:id="@+id/footer_navigation"
        layout="@layout/footer_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>